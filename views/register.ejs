        <form class="login-form my-5 mx-auto border p-5 rounded" action="/register" method="POST">
            <h1 class="text-center">Register</h1>
            <!-- <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control w-75" id="username" placeholder="Enter username" name="username" />
            </div> -->
            <div class="form-group">
                <label for="mobile">Mobile</label>
                <div class="otp-flex">
                    <input type="text" class="form-control w-75" id="mobile" placeholder="Enter mobile no." name="mobile" />
                    <div class="send-otp">Send OTP</div>
                </div>
                <div class="otp-items">
                  <input type="text" class="otp-box" placeholder="Enter OTP"/>
                  <button type="submit" class="otp-button">Check OTP</button>
              </div>
            </div>
            <div class="form-group">
                <label for="email">Email ID</label>
                <div class="otp-flex">
                    <input type="email" class="form-control w-75" id="email" placeholder="Enter email" name="email" />
                    <div class="send-otp" onclick="mailOTP()">Send OTP</div>
                </div>
                <div class="otp-items">
                    <input type="text" class="otp-box" placeholder="Enter OTP"/>
                    <!-- <button type="submit" class="otp-button" name="button" value="emailButton">Check OTP</button> -->
                    <input type="button" class="otp-button" name="emailButton" value="Check OTP">
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control w-75" id="password" placeholder="Password" name="password" />
            </div>
