<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

        <form class="login-form my-5 mx-auto border p-5 rounded" action="/register" method="POST">
            <h1>Register</h1>
            <div class="form-group">
                <label for="username">Email address</label>
                <input type="text" class="form-control w-75" id="username" placeholder="Enter username" name="username" />
            </div>
            <div class="form-group">
                <label for="mobile">Mobile</label>
                <div class="otp-flex">
                    <input type="text" class="form-control w-75" id="mobile" placeholder="Enter mobile no." name="mobile" />
                    <div class="send-otp">Send OTP</div>
                </div>
                <div class="otp-items">
                  <input type="text" class="otp-box" placeholder="Enter OTP"/>
                  <button type="submit" class="otp-button">Check OTP</button>
              </div>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <div class="otp-flex">
                    <input type="email" class="form-control w-75" id="email" placeholder="Enter email" name="email" />
                    <div class="send-otp">Send OTP</div>
                </div>
                <div class="otp-items">
                    <input type="text" class="otp-box" placeholder="Enter OTP"/>
                    <!-- <button type="submit" class="otp-button" name="button" value="emailButton">Check OTP</button> -->
                    <input type="button" class="otp-button" name="emailButton" value="Check OTP" onClick="verifyOTP()">
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control w-75" id="password" placeholder="Password" name="password" />
            </div>
            <!-- <div class="form-check mb-2">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Remember Me</label>
            </div> -->
            <div class="login-buttons">
                <button type="submit" value="submit" class="btn btn-dark">Submit</button>
                <a href="/login" class="text-danger">Login</a>
            </div>
        </form>
        <script
            src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"
        ></script>
        <script src="../js/otp.js"></script>
        <script>
            console.log("register.ejs");
            const buttons = document.getElementsByClassName("send-otp");

            function otp(e) {
                e.target.parentElement.nextSibling.nextSibling.style.display = "block";
            }
            
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].addEventListener("click", otp);
            }


        </script>
    </body>
</html>
