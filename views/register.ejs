        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"
        ></script>
        <script src="../js/otp.js"></script>
        <script>
            console.log("register.ejs");
            const buttons = document.getElementsByClassName("send-otp");

            function otp(e) {
                e.target.parentElement.nextSibling.nextSibling.style.display = "block";
            }
            
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].addEventListener("click", otp);
            }

            function post(e) {
                e.preventDefault();
                const res = fetch("localhost:3000/mail", {
                    method: "POST",
                    body: {
                        email: document.getElementById('email').value
                    },
                    header: {
                        "Content-Type": "application/json"
                    }
                })
            }

            function mailOTP() {
                const form = document.getElementsByClassName("login-form")[0];
                form.method = "POST";
                form.action = "/mail";
                form.post();

                

                // console.log(res.otp)
            }
        </script>
